{
  "name": "cypress-skeleton-project-for-e2e-testing",
  "version": "1.0.0",
  "description": "Cypress framework for e2e testing",
  "repository": {
    "type": "git",
    "url": "add your repository url in here later"
  },
  "author": "Laerte Neto",
  "license": "ISC",
  "engines": {
    "node": ">=12.22.0"
  },
  "scripts": {
    "clean": "rm -rf ./node_modules/",
    " --- CYPRESS DEV SCRIPTS ---- ": "",
    "cy:open": "cypress open --e2e --browser chrome --config specPattern=cypress/integration/**/*.spec.js",
    "cy:run": "cypress run --browser chrome",
    " --- CYPRESS PIPELINE SCRIPTS WITHOUT FILE RESULTS ---- ": "",
    "cy:run:chrome": "cypress run --browser chrome --spec 'cypress/integration/**/*.spec.js'",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "cy:run:tag:chrome": "cypress run --env grepTags=@smoke --browser chrome",
    "cy:run:tag:firefox": "cypress run --env grepTags=@smoke --browser firefox",
    "cy:list:spec:by:names": "find-cypress-specs --names",
    "cy:list:spec:by:tags": "find-cypress-specs --tags",
    "cy:run:data:spec:example": "cypress run --browser chrome --config specPattern=cypress/integration/**/*.spec.js --spec cypress/integration/dataAndEnvironmentIntegrity/warmUp.spec.js",
    " --- Formatting: ESLint and Prettier + Typescript compiler to support JS code ---- ": "",
    "eslint": "eslint --report-unused-disable-directives --max-warnings=0 -c .eslintrc.json .",
    "eslint:fix": "yarn eslint --fix",
    "lint": "yarn eslint && yarn prettier:check",
    "lint:fix": "yarn ts:clear && yarn eslint:fix && yarn prettier:fix",
    "prettier:cli": "prettier \"**/**.{ts,js,tsx}\" \"**/**.{json,md,yml}\"",
    "prettier:check": "yarn prettier:cli -l",
    "prettier:fix": "yarn prettier:cli --write \"**/**.{ts,js,tsx}\" \"**/**.{json,md,yml}\"",
    "ts:clear": "rm -rf dist",
    "compile": "tsc && rm -rf dist"
  },
  "keywords": [
    "tests",
    "js",
    "cypress"
  ],
  "devDependencies": {
    "@4tw/cypress-drag-drop": "2.2.1",
    "@babel/core": "7.19.3",
    "@babel/eslint-parser": "7.19.1",
    "@cypress/skip-test": "2.6.1",
    "cypress": "10.10.0",
    "cypress-grep": "3.0.3",
    "cypress-iframe": "1.0.1",
    "cypress-mochawesome-reporter": "3.2.2",
    "cypress-multi-reporters": "1.6.1",
    "cypress-plugin-snapshots": "1.4.4",
    "cypress-real-events": "1.7.1",
    "cypress-recurse": "1.23.0",
    "cypress-wait-until": "1.7.2",
    "cypress-xpath": "2.0.1",
    "dayjs": "1.11.5",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-eslint-plugin": "5.0.6",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "find-cypress-specs": "1.19.2",
    "husky": "8.0.1",
    "junit-report-merger": "4.0.0",
    "mocha": "10.0.0",
    "mocha-junit-reporter": "2.1.0",
    "prettier": "2.7.1",
    "tsc-silent": "1.2.2",
    "typescript": "4.8.4"
  }
}
